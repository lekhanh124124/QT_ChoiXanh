<script>
    // Định nghĩa hàm initializeDataTable
    function initializeDataTable(tableId, url, columns, defaultOrderColumn, defaultOrderDir, nonOrderableColumns) {
        var table = $('#' + tableId).DataTable({
            ajax: url ? { url: url, dataSrc: '' } : null,
            columns: columns.length > 0 ? columns : [
                { data: 'id' },
                { data: 'tieu_de' },
                { data: 'truy_cap' }
            ],
            order: [[defaultOrderColumn, defaultOrderDir || 'asc']],
            pageLength: 10,
            processing: true,
            serverSide: false,
            columnDefs: [
                { targets: nonOrderableColumns || [], orderable: false }
            ]
        });

        // Thêm xử lý toggle column
        $('#' + tableId + '_filter .toggle-vis').on('click', function (e) {
            e.preventDefault();
            var columnIdx = $(this).data('column');
            var column = table.column(columnIdx);
            column.visible(!column.visible());
        });

        return table;
    }

