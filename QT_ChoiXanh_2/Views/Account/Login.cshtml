    <style>
        .formthongbaomoipopup1 .wrap-login-page {
            position: fixed;
            width: 100%;
            height: 100%;
            background: #d2d6de;
            top: 0;
            left: 0;
            z-index: 999999999999
        }
    </style>
    <script>
        function detectDevTools() {
            const threshold = 160;
            function checkWindowSize() {
                const widthDiff = window.outerWidth - window.innerWidth;
                const heightDiff = window.outerHeight - window.innerHeight;
                if (widthDiff > threshold || heightDiff > threshold) {
                    redirectToBlankPage();
                }
            }
            function checkExecutionTime() {
                const start = new Date().getTime();
                debugger;
                const end = new Date().getTime();
                if (end - start > 100) {
                    redirectToBlankPage();
                }
            }
            function checkConsole() {
                const element = new Image();
                Object.defineProperty(element, 'id', {
                    get: function () {
                        redirectToBlankPage();
                    }
                });
                console.log(element);
            }
            document.addEventListener('keydown', function (event) {
                if (event.ctrlKey && event.key === 'u') {
                    event.preventDefault();
                    redirectToBlankPage();
                }
            });
            if (document.referrer && document.referrer.startsWith('view-source')) {
                redirectToBlankPage();
            }
            function redirectToBlankPage() {
                window.location.href = 'about:blank';
            }
            window.addEventListener('resize', checkWindowSize);
            setInterval(checkAllMethods, 1000);
            function checkAllMethods() {
                checkWindowSize();
                checkExecutionTime();
                checkConsole();
            }
            checkAllMethods();
            setTimeout(function () {
                if (document.documentElement.innerHTML === "") {
                    redirectToBlankPage();
                }
            }, 1000);
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/jquery-migrate-3.3.2.min.js"></script>
    <script src="/admin/ckfinder/ckfinder.js"></script>
    <script src="/plugins/ckeditor-f/ckeditor.js"></script>
</head>
<body class="hold-transition login-page" onload="">
    <div class="wrap-login-page">
        <div class="login-box">
            <div class="login-logo">
                <a href="/"><b>CRM</b> Software</a>
            </div>
            <div class="login-box-body">
                <p class="login-box-msg">Đăng nhập hệ thống</p>
                <form asp-action="Login" asp-controller="Account" method="post" id="loginform">
                    <div class="form-group has-feedback">
                        <input class="form-control" placeholder="Nhập user" name="MemberUsername" required>
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="password" class="form-control" placeholder="Nhập mật khẩu" name="MemberPassword" required>
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <button type="submit" class="btn btn-xs btn-primary btn-flat pull-right">Đăng nhập</button>
                    </div>
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @ViewData["ErrorMessage"]
                        </div>
                    }
                </form>
                <a href="/Account/ForgotPassword">Quên mật khẩu</a>
            </div>
        </div>
    </div>
