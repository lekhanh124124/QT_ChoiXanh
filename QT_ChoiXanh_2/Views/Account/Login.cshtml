    <script src="/dist/js/timeago.js"></script>
    <script src="/dist/js/lionbars.js"></script>
    <script src="/dist/js/adminlte.js"></script>
    <script src="/dist/js/staff.cx.js"></script>
    <script>
        $(document).ready(function () {
            $("#loginform").ajaxForm({
                url: '/Account/Login',
                type: 'post',
                beforeSend: function () {
                    $('html').addClass('loading');
                    $('html').removeClass('loaded');
                },
                async: true,
                success: function (response) {
                    $('html').removeClass('loading');
                    if (response.success) {
                        window.location.href = '/Admin/Index';
                    } else {
                        $(".formthongbaopopupcenter").html('<div class="alert alert-danger">' + response.message + '</div>');
                    }
                },
                error: function () {
                    $('html').removeClass('loading');
                    $(".formthongbaopopupcenter").html('<div class="alert alert-danger">Đã có lỗi xảy ra, vui lòng thử lại.</div>');
                }
            });
        });
    </script>
    <span class="formthongbaopopupcenter"></span>
    <div class="wrap-spinner">
        <div class="spinner">
            <div class="cube1"></div>
            <div class="cube2"></div>
        </div>
    </div>
</body>
</html>